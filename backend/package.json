    "@modelcontextprotocol/sdk": "^1.0.0",
    "@mosaic/shared": "^2.0.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "dockerode": "^4.0.2",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "openai": "^6.7.0",
    "pg": "^8.11.3",
    "puppeteer": "^24.27.0",
    "redis": "^4.6.12",
