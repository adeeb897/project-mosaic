{
  "name": "project-mosaic",
  "version": "0.1.0",
  "description": "A modular platform with extensible architecture for AI components",
  "main": "dist/index.js",
  "scripts": {
    "start": "node -r tsconfig-paths/register dist/index.js",
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\" --names \"CLIENT,SERVER\" --prefix-colors \"cyan,yellow\"",
    "dev:setup": "node scripts/dev-setup.js",
    "dev:server": "nodemon",
    "dev:client": "node scripts/build-client.js --watch",
    "dev:debug": "nodemon --inspect",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc",
    "build:client": "node scripts/build-client.js",
    "test": "jest --passWithNoTests",
    "test:unit": "jest --config jest.config.unit.js",
    "test:integration": "jest --config jest.config.integration.js",
    "test:e2e": "jest --config jest.config.e2e.js",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --watch --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:unit:coverage": "jest --config jest.config.unit.js --coverage",
    "test:integration:coverage": "jest --config jest.config.integration.js --coverage",
    "test:ci": "npm run test:unit:coverage && npm run test:integration:coverage",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,scss}\"",
    "prepare": "husky install",
    "clean": "rimraf dist coverage public/js public/css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/organization/project-mosaic.git"
  },
  "keywords": [
    "ai",
    "modular",
    "llm",
    "agent",
    "mcp",
    "a2a",
    "mosaic"
  ],
  "author": "Project Mosaic Team",
  "license": "GPL-3.0",
  "dependencies": {
    "axios": "^1.5.0",
    "bcryptjs": "3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "7.5.0",
    "express-validator": "7.2.1",
    "google-auth-library": "9.15.1",
    "helmet": "8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "morgan": "1.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "7.6.0",
    "redis": "^4.6.8",
    "semver": "7.7.2",
    "uuid": "11.1.0",
    "winston": "^3.10.0",
    "ws": "^8.14.1",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/bcryptjs": "2.4.6",
    "@types/cors": "^2.8.18",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.22",
    "@types/express-rate-limit": "5.1.3",
    "@types/helmet": "0.0.48",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "9.0.9",
    "@types/mongoose": "^5.11.96",
    "@types/morgan": "1.9.9",
    "@types/node": "^20.17.50",
    "@types/puppeteer": "5.4.7",
    "@types/react": "18.3.23",
    "@types/react-dom": "^18.2.7",
    "@types/redis": "^4.0.10",
    "@types/redis-mock": "0.17.3",
    "@types/semver": "7.7.0",
    "@types/supertest": "6.0.3",
    "@types/uuid": "10.0.0",
    "@types/winston": "^2.4.4",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.25.5",
    "esbuild-css-modules-plugin": "3.1.5",
    "eslint": "^8.48.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "husky": "^8.0.3",
    "jest": "^29.6.4",
    "jest-mock-extended": "4.0.0-beta1",
    "lint-staged": "^14.0.1",
    "mongodb-memory-server": "10.1.4",
    "nodemon": "3.1.10",
    "prettier": "^3.0.3",
    "puppeteer": "24.9.0",
    "redis-mock": "0.56.3",
    "rimraf": "5.0.5",
    "supertest": "7.1.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.2.2",
    "wait-on": "8.0.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
