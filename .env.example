# Project Mosaic - Environment Configuration
# Copy this file to .env and fill in your values

# ============================================================================
# Core Configuration
# ============================================================================
NODE_ENV=development
PORT=3000

# ============================================================================
# LLM Provider (Choose one or configure multiple)
# ============================================================================

# Default provider to use
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4
OPENAI_ORG_ID=

# Anthropic Configuration
# ANTHROPIC_API_KEY=sk-ant-...
# ANTHROPIC_MODEL=claude-3-5-sonnet-20250129

# Local Ollama Configuration
# OLLAMA_HOST=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# ============================================================================
# Sandbox Provider (Choose one)
# ============================================================================

# Default sandbox provider
SANDBOX_PROVIDER=docker

# E2B Cloud Sandboxes
# E2B_API_KEY=e2b_...

# Docker Local Sandboxes
DOCKER_HOST=unix:///var/run/docker.sock

# ============================================================================
# Database
# ============================================================================

# PostgreSQL connection string
DATABASE_URL=postgresql://mosaic:mosaic@localhost:5432/mosaic

# Connection pool settings
DB_POOL_MIN=2
DB_POOL_MAX=10

# ============================================================================
# Redis (Event Bus)
# ============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PREFIX=mosaic:

# ============================================================================
# Observability (Optional but Recommended)
# ============================================================================

# LangSmith
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=mosaic-dev
LANGSMITH_TRACING=false

# Alternative: Custom observability
# OBSERVABILITY_PROVIDER=datadog|newrelic|custom
# DATADOG_API_KEY=
# NEWRELIC_LICENSE_KEY=

# ============================================================================
# Security
# ============================================================================

# JWT secret for API authentication (generate with: openssl rand -base64 32)
JWT_SECRET=

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# Frontend Configuration
# ============================================================================

# API endpoints
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:3000

# ============================================================================
# Feature Flags
# ============================================================================

ENABLE_BROWSER_MCP=true
ENABLE_FILESYSTEM_MCP=true
ENABLE_MEMORY_MCP=true
ENABLE_A2A_PROTOCOL=true

# ============================================================================
# Development
# ============================================================================

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Enable debug mode
DEBUG=false

# Enable hot reload
HOT_RELOAD=true
