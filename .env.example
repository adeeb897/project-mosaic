# Application Settings
NODE_ENV=development
PORT=3000
LOG_LEVEL=debug

# Database Settings
MONGODB_URI=mongodb://localhost:27017/project-mosaic
REDIS_URI=redis://localhost:6379

# Authentication
JWT_SECRET=your_jwt_secret_key_change_in_production
JWT_EXPIRATION=1d
REFRESH_TOKEN_EXPIRATION=7d

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# External Services
# Add your API keys and service configurations here
# LLM_API_KEY=your_llm_api_key
# OPENAI_API_KEY=your_openai_api_key
# ANTHROPIC_API_KEY=your_anthropic_api_key

# Security
CORS_ORIGIN=*
ENCRYPTION_MASTER_KEY=generate_64_character_hex_key_for_production

# Feature Flags
ENABLE_MARKETPLACE=true
ENABLE_MODALITY_VOICE=true
ENABLE_MODALITY_IMAGE=true

# Development Features (only for development environment)
# BYPASS_AUTH_IN_DEV=true
